{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "requisitionCreateRQ",
    "type": "object",
    "properties": {
        "PK": {
            "type": "string",
            "pattern": "^REQI[0-9]+$",
            "maxLength": 11
        },
        "requireDate": {
            "type": "string"
        },
        "motive": {
            "type": "string"
        },
        "observations": {
            "type": "string"
        },
        "fileExtension": {
            "type": "string"
        },
        "items": {
            "type": "array",
            "minItems": 1,
            "maxItems": 60,
            "items": {
                "type": "object",
                "properties": {
                    "SK": {
                        "type": "string",
                        "pattern": "^ITRQ[0-9]+$",
                        "maxLength": 11
                    },
                    "item": {
                        "type": "string",
                        "pattern": "^ITEM[0-9]+$",
                        "maxLength": 11
                    },
                    "quantity": {
                        "type": "number"
                    }
                },
                "additionalProperties": false,
                "required": ["item", "quantity"]
            }
        }
    },
    "additionalProperties": false,
    "required": ["PK", "requireDate", "observations", "items"]
}
